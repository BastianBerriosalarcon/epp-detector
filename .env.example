# =============================================================================
# Configuración de la API de detección de EPP
# =============================================================================
# Copiar este archivo a .env y ajustar valores según entorno
# Comandos: cp .env.example .env

# =============================================================================
# Aplicación
# =============================================================================
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# Modelo
# =============================================================================
MODEL_PATH=models/yolov8n_epp.onnx
MODEL_TYPE=onnx  # pytorch o onnx
INPUT_SIZE=640

# =============================================================================
# Inferencia
# =============================================================================
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MAX_DETECTIONS=100
ENABLE_WARMUP=true
WARMUP_ITERATIONS=5

# =============================================================================
# Imágenes
# =============================================================================
MAX_IMAGE_SIZE_MB=10
MIN_IMAGE_DIMENSION=320
MAX_IMAGE_DIMENSION=4096

# =============================================================================
# Docker & API Server
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
UVICORN_WORKERS=1  # Workers de Uvicorn (1 por CPU core)
STREAMLIT_PORT=8501

# =============================================================================
# Hardware
# =============================================================================
ENABLE_GPU=true
NUM_WORKERS=1

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# =============================================================================
# Google Cloud Platform (opcional)
# =============================================================================
GCP_PROJECT_ID=
GCP_BUCKET_NAME=
GCP_ZONE=us-central1-a

# Build metadata (para Docker)
BUILD_DATE=
VCS_REF=

# =============================================================================
# Seguridad
# =============================================================================
ENABLE_CORS=true
CORS_ORIGINS=*  # Separar múltiples orígenes con coma
ENABLE_API_KEY=false
API_KEY=

# =============================================================================
# Rate Limiting (opcional)
# =============================================================================
ENABLE_RATE_LIMIT=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
